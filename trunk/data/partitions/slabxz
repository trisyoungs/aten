# Name / Description
string name = "SlabXZ";
string description = "Slab in XZ Plane";

# Grid size information
int roughgrid[3] = { 40,40,40 };
int finegrid[3] = { 100,100,100 };

# Number of partitions
int npartitions = 2;

# A partition may contain options set through the defaultDialog as follows
global double start = 0.4, end = 0.6;
int partitionOptions()
{
	Dialog ui = createDialog("SlabXZ Scheme Options");
	ui.verticalFill = TRUE;
	ui.addDoubleSpin("start", "Start", 0.0, 1.0, 0.1, start);
	ui.addDoubleSpin("end", "End", 0.0, 1.0, 0.1, end);
	if (ui.show())
	{
		start = ui.asInteger("start");
		end = ui.asInteger("end");
		return TRUE;
	}
	else return FALSE;
}

# Every partition definition *must* contain 'partition' and 'partitionName' functions
int partition(double x, double y, double z)
{
	// Check 1 - Is the point inside the slab (region 1)
	if ((y >= start) && (y <= end)) return 1;

	// Not inside any defined regions, so return '0' for 'inside rest of cell'
	return 0;
}

string partitionName(int id)
{
	switch(id)
	{
		case (0):
			return "Unit Cell";
		case (1):
			return "Slab";
		default:
			return "UNKNOWN";
	}
}
