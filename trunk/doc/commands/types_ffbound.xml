	<section id="command.types.ffbound"><title>FFBound Type</title>
		
		<indexterm zone="command.types.ffbound"><primary>types</primary><secondary>ffbound</secondary></indexterm>
		
		<table frame='all' pgwide='1' tocentry='1'><title>FFBound Type Members</title>
			<tgroup cols='4' align='left' colsep='1' rowsep='1'>
				<thead>
